---
import { Icon } from 'astro-icon/components';
---

<footer
  class='px-10 h-24 bg-blue-600 flex flex-col items-center justify-center gap-2 lg:flex-row lg:justify-between shadow-lg rounded-t-lg z-10 text-white'
>
  <div class='w-1/3 hidden lg:flex'></div>
  <p class='text-base w-1/3 hidden lg:flex'>&copy; Express Dental 2024</p>
  <div class='flex gap-4'>
    <a href='mailto:expressdental@email.com' class='flex'
      ><Icon name='mdi:email' class='text-3xl' /><span
        class='text-xs text-blue-600 w-0'>E</span
      ></a
    >
    <a href='https://google.com' class='flex'
      ><Icon name='mdi:facebook' class='text-3xl' /><span
        class='text-xs text-blue-600 w-0'>F</span
      ></a
    >
    <a href='https://google.com' class='flex'
      ><Icon name='mdi:instagram' class='text-3xl' /><span
        class='text-xs text-blue-600 w-0'>I</span
      ></a
    >
    <a href='https://google.com' class='flex'
      ><Icon name='mdi:twitter' class='text-3xl' />
      <span class='text-xs text-blue-600 w-0'>T</span></a
    >
  </div>
  <p class='text-base lg:hidden'>&copy; Express Dental 2024</p>
</footer>
