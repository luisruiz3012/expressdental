---
const url = Astro.url['pathname'];
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Pagina no encontrada</title>
  </head>
  <body>
    <div
      class='text-blue-500 flex items-center justify-center h-screen flex-col'
    >
      <h1 class='font-bold text-9xl'>404</h1>
      <h2 class='mt-5 text-xl'>
        No se encontro la pagina <span class='text-lg font-bold italic'
          >{url}</span
        >
      </h2>
      <a href='/' class='bg-blue-500 text-white mt-8 px-4 py-2 rounded-lg'>
        Ir al inicio</a
      >
    </div>
  </body>
</html>
