---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = Astro.props.title;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta
      name='description'
      content='Descubre la excelencia en odontología en nuestra clínica. Ofrecemos servicios de blanqueamiento dental, implantes de alta calidad y odontología cosmética personalizada. Tu sonrisa, nuestra prioridad. ¡Conéctate con nosotros para una atención dental excepcional y recupera la confianza en tu salud bucal!'
    />

    <link rel='icon' type='image/x-icon' href='/images/logo.webp' />
    <title>{title}</title>
    <meta name='icon' content='' />
  </head>
  <body class='text-gray-600 text-lg'>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
